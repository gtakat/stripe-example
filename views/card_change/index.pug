html 
  head 
    title= "Stripe Demo"
    script(src="/js/card_change.js")
    link(rel="stylesheet" href="/css/global.css")
  body 
    div(class="header-title") Stripe Demo - Card(Change)
    form(id="card-form")
      div(class="input-title") Customer ID
      input(id="customer-id" type="text")

      div(class="input-title") Payment Mehod ID
      input(id="payment-method-id" type="text")

      div(id="card-element")
      button(id="submit")
        div(class="spinner hidden" id="spinner")
        span(id="button-text") Change Card
      
      p(id="error" role="alert")
      p(class="result-message")
