html 
  head 
    title= "Stripe Demo"
    script(src="/js/subscription_promotion_code.js")
    link(rel="stylesheet" href="/css/global.css")
  body 
    div(class="header-title") Stripe Demo - Subscription (Attach Promotion Code)
    form(id="subscription-form")
      div(class="input-title") Subscription ID
      input(id="subscription-id" type="text")
      
      div(class="input-title") プロモーションコード
      input(id="promotion-code" type="text")
      
      button(id="submit")
        div(class="spinner hidden" id="spinner")
        span(id="button-text") Attach Code
      
      p(id="error" role="alert")
      p(class="result-message")
